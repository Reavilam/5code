@page
@model AsignaSalones.App.Frontend.Pages.EditarHorarioClaseModel
@{
}
<h1>Editar Horarios de Clase</h1>
<form method="post">
    <input type="hidden" asp-for="horarioClase.id">
    <div class="form-group">
        <label asp-for="horarioClase.nombre"></label>
        <input asp-for="horarioClase.nombre" class="form-control">
        <span class="text_danger" asp-validation-for="horarioClase.nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="horarioClase.cantPersonas"></label>
        <input asp-for="horarioClase.cantPersonas" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="horarioClase.hora"></label>
        <input asp-for="horarioClase.hora" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>