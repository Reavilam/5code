@page
@model AsignaSalones.App.Frontend.Pages.MatriculasModel
@{
}
<h1>Matriculas</h1>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nombre de Estudiante</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var matricula in Model.Matriculas)
        {
            <tr>
                <td>@matricula.id</td>
                <td>@matricula.estudiante.nombre</td>            
                <td>
                    <a class="btn btn-primary table-btn" data-toggle="tooltip" title="Detalles" asp-page="./DetalleMatricula" asp-route-matriculaId="@matricula.id">
                        <i class="fas fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning table-btn" data-toggle="tooltip" title="Editar" asp-page="./EditarMatricula" asp-route-matriculaId="@matricula.id">
                        <i class="fas fa-edit" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn" data-toggle="tooltip" title="Eliminar" asp-page="./EliminarMatricula" asp-route-matriculaId="@matricula.id">
                        <i class="fas fa-book-dead fa-lg" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
                    
        }
    </tbody>
</table>
<a asp-page=".\EditarMatricula" class="btn btn-primary">Adicionar Matricula</a>