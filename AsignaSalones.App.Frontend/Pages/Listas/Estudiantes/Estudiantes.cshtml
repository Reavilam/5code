@page
@model AsignaSalones.App.Frontend.Pages.EstudiantesModel
@{
}
<h1>Lista de Estudiantes</h1>
<div>
    <form method="get">
    <div class="form-group">
    <p>
    Estudiante:<input type="text" name="filtroNombre" asp-for="FiltroNombre"/>
        <input type="submit" value="Filtrar" />
    </p>
</form>
</div>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Doc ID</th>
    </tr>
    @foreach (var estudiante in Model.Estudiantes)
    {
        <tr>
            <td>@estudiante.nombre</td>
            <td>@estudiante.apellidos</td>
            <td>@estudiante.identificacion</td>            
            <td>
                <a class="btn btn-primary table-btn" data-toggle="tooltip" title="Detalles" asp-page="./DetalleEstudiante" asp-route-estudianteId="@estudiante.id">
                    <i class="fas fa-info-circle" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
                
    }
</table>
