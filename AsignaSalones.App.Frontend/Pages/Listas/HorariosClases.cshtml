@page
@model AsignaSalones.App.Frontend.Pages.HorariosClasesModel
@{
}
<h1>Horarios de Clases</h1>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Cantidad de Personas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var horarioClase in Model.HorariosClases)
        {
            <tr>
                <td>@horarioClase.nombre</td>
                <td>@horarioClase.cantPersonas</td>            
                <td>
                    <a class="btn btn-primary table-btn" data-toggle="tooltip" title="Detalles" asp-page="./DetalleHorarioClase" asp-route-horarioClaseId="@horarioClase.id">
                        <i class="fas fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning table-btn" data-toggle="tooltip" title="Editar" asp-page="./EditarHorarioClase" asp-route-horarioClaseId="@horarioClase.id">
                        <i class="fas fa-edit" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn" data-toggle="tooltip" title="Eliminar" asp-page="./EliminarHorarioClase" asp-route-horarioClaseId="@horarioClase.id">
                        <i class="fas fa-book-dead fa-lg" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
                    
        }
    </tbody>
</table>
<a asp-page=".\EditarHorarioClase" class="btn btn-primary">Adicionar Horario de Clase</a>